<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_item_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/margin_4"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_web_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sudanese teenager who killed rapist husband appeals death sentence"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_view_publication_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sun 27 May 2018 07.00 BST"
                android:textSize="@dimen/text_size_12"/>
            <TextView
                android:id="@+id/text_view_section_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Global development"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/text_view_contributor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Authors"
                android:maxLines="1"
                android:textStyle="italic"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">



                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_public_24"
                    android:layout_marginEnd="5dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_mobile_screen_share_24"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_share_24"
                    android:layout_marginEnd="5dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_bookmark_border_24"/>

            </LinearLayout>
        </LinearLayout>

            </LinearLayout>

</LinearLayout>